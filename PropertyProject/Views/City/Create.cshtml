@model ModelLayer.CityModel
@{
    ViewBag.Title = "Add City";
    ViewBag.isSideBar = "true";
}
<!-- Dashboard -->
<div id="dashboard">
    @RenderPage("~/Views/Shared/sidebar.cshtml")
    <!-- Content
        ================================================== -->
    <div class="dashboard-content">

        <!-- Titlebar -->
        <div id="titlebar">
            <div class="row">
                <div class="col-md-12">
                    <h2>Add City</h2>
                    <!-- Breadcrumbs -->
                    <nav id="breadcrumbs">
                        <ul>
                            <li><a href="#">Home</a></li>
                            <li><a href="#">Dashboard</a></li>
                            <li>Add City</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <div align="center"><h4 style="color:red;">@ViewBag.postCity</h4></div>
                <!--page Data Starts here -->
                <div class="row ">

                    <div class="  col-sm-12">
                        @using (Html.BeginForm("Create", "City", FormMethod.Post))
                        {

                <div align="center"><h1 class="h3 mb-3 font-weight-normal"><b class="mainHeading" style="color:black">Enter New City Details</b></h1></div>

                <div class="inputSpace"></div>
                <div class="form-group input-group input-group-lg">
                    <div class="input-group-prepend"><span class="input-group-text" id="inputLabel"><b>City Name</b></span></div>
                    @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "city name", @arialabel = "Large", @ariadescribedby = "inputGroup-sizing-sm", @required = "true" })

                </div>

                <div class="inputSpace"></div>
                <div class="form-group input-group input-group-lg">
                    <div class="input-group-prepend"><span class="input-group-text" id="inputLabel"><b>Latitude</b></span></div>
                    <input type="number" name="lat" step="any" class="form-control" placeholder="Latitude" aria-label="Large" aria-describedby="inputGroup-sizing-sm" id="latlng" onkeydown="return (event.keyCode!=69);">
                </div>

                <div class="inputSpace"></div>
                <div class="form-group input-group input-group-lg">
                    <div class="input-group-prepend"><span class="input-group-text" id="inputLabel"><b>Longitude</b></span></div>
                    <input type="number" name="lng" step="any" class="form-control" placeholder="Longitude" aria-label="Large" aria-describedby="inputGroup-sizing-sm" id="latlng" onkeydown="return (event.keyCode!=69);">
                </div>


                <div class="inputSpace"></div>
                <button class="btn-my first">Add Record</button>
                        }



            </div>
            </div>




            </div>


        </div>



    </div>
    <!-- Content / End -->
</div>
<!-- Dashboard / End -->
</div>
<!-- Wrapper / End -->
<!-- Scripts
================================================== -->
</body>

