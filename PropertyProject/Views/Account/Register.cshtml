@model PropertyProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    ViewBag.isSideBar = "false";
}
<!-- Login -->
<div class="row">
    <div class="col-md-12">
        <div class="tab-content" id="tab1">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <p class="form-row form-row-wide">
            @Html.LabelFor(m => m.Name)
            <i class="im im-icon-Male"></i>
            @Html.TextBoxFor(m => m.Name, new { @class = "input-text" })
        </p>

        <p class="form-row form-row-wide">
            @Html.LabelFor(m => m.Email)
            <i class="im im-icon-Male"></i>
            @Html.TextBoxFor(m => m.Email, new { @class = "input-text" })
        </p>

        <p class="form-row form-row-wide">
            @Html.LabelFor(m => m.Phone)
            <i class="im im-icon-Male"></i>
            @Html.TextBoxFor(m => m.Phone, new { @class = "input-text" })
        </p>

        <p class="form-row form-row-wide">
            @Html.LabelFor(m => m.Password)
            <i class="im im-icon-Male"></i>
            @Html.TextBoxFor(m => m.Password, new { @class = "input-text", @type = "password" })
        </p>

        <p class="form-row form-row-wide">
            @Html.LabelFor(m => m.ConfirmPassword)
            <i class="im im-icon-Male"></i>
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "input-text", @type = "password" })
        </p>
        <div class="form-row">
            <input type="submit" class="button border margin-top-5" name="register" value="Register" />
        </div>
}
        </div>
    </div>
</div>

<!-- Footer
================================================== -->
@RenderPage("~/Views/Shared/footer.cshtml")
<!-- Footer / End -->
</div>
<!-- Wrapper / End -->
</body>
</html>