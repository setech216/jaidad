@model ModelLayer.PropertyTypeModel

@{
    ViewBag.Title = "Add PropertType";
    ViewBag.isSideBar = "true";
}
<!-- Dashboard -->
<div id="dashboard">
    @RenderPage("~/Views/Shared/sidebar.cshtml")

    <!-- Content
    ================================================== -->
    <div class="dashboard-content">

        <!-- Titlebar -->
        <div id="titlebar">
            <div class="row">
                <div class="col-md-12">
                    <h2>Add Property Type</h2>
                    <!-- Breadcrumbs -->
                    <nav id="breadcrumbs">
                        <ul>
                            <li><a href="#">Home</a></li>
                            <li><a href="#">Dashboard</a></li>
                            <li>Add Property Type</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div align="center"><h4 style="color:red;">@ViewBag.postPropertyType</h4></div>

                <!--page Data Starts here -->
                <div class="row ">

                    <div class="  col-sm-12">

                        @using (Html.BeginForm("Create", "PropertyType", FormMethod.Post))
                        {
                    <div align="center"><h1 class="h3 mb-3 font-weight-normal"><b class="mainHeading" style="color:black">Enter New Property Type</b></h1></div>

                    <div class="inputSpace"></div>
                    <div class="form-group input-group input-group-lg">
                        <div class="input-group-prepend"><span class="input-group-text" id="inputLabel"><b>Property Type </b></span></div>
                        <input type="text" name="name" class="form-control" placeholder="type" aria-label="Large" aria-describedby="inputGroup-sizing-sm" required>
                    </div>



                    <div class="inputSpace"></div>
                    <button class="btn-my first">Add Record</button>

                        }


                    </div>
                </div>




            </div>


        </div>



    </div>
    <!-- Content / End -->

</div>
<!-- Dashboard / End -->
</div>
<!-- Wrapper / End -->
<!-- Scripts
================================================== -->
</body>

